generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  country   String?
  isAdmin   Boolean   @default(false)
  isSetupComplete  Boolean @default(false)
  isVip  Boolean @default(false)
  playlists Playlist[]
  movieWatchlist MovieWatchlist[]
  seriesWatchlist SeriesWatchlist[]
  movieFavorites MovieFavorite[]
  seriesFavorites SeriesFavorite[]
  movieWatchLater MovieWatchLater[]
  seriesWatchLater SeriesWatchLater[]
}

model Playlist {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  isPublic    Boolean   @default(false)
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       PlaylistItem[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model PlaylistItem {
  id         Int      @id @default(autoincrement())
  playlistId Int
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  mediaId    Int
  mediaType  String
  mediaTitle String
  posterPath String?
  addedAt    DateTime @default(now())
  
  @@unique([playlistId, mediaId, mediaType])
}

model MovieWatchlist {
  id        Int    @id @default(autoincrement())
  movieId   Int?
  movieTitle String
  posterPath String?
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model SeriesWatchlist {
  id        Int    @id @default(autoincrement())
  seriesId  Int?
  seriesTitle String
  posterPath String?
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model MovieFavorite {
  id        Int      @id @default(autoincrement())
  movieId   Int
  movieTitle String
  posterPath String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, movieId])
}

model SeriesFavorite {
  id        Int      @id @default(autoincrement())
  seriesId  Int
  seriesTitle String
  posterPath String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, seriesId])
}

model MovieWatchLater {
  id        Int      @id @default(autoincrement())
  movieId   Int
  movieTitle String
  posterPath String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, movieId])
}

model SeriesWatchLater {
  id        Int      @id @default(autoincrement())
  seriesId  Int
  seriesTitle String
  posterPath String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, seriesId])
}
